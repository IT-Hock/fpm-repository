---
layout: default.html
scripts: ["themes.page.js"]
title: Themes
keywords: "themes, fish themes, skin, skins, fish skins"
---

<div class="container">
    <div class="row mb-2">
        <div class="col">
            <form id="search-form">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text drac-bg-cyan border-0">
                            <i class="fa fa-paint-brush"></i>
                        </span>
                    </div>
                    <input type="text" class="form-control form-control-lg" placeholder="Search for themes"
                           id="search-input"
                           aria-label="Search for themes">
                    <div class="input-group-append">
                        <button class="btn btn-lg btn-secondary">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row mb-5 mt-5" id="loading-spinner">
        <div class="col-12 text-center">
            <i class="fa fa-spinner fa-spin fa-3x"></i>
        </div>
    </div>

    <div class="row mb-5 mt-5" id="message-container" style="display: none;">
        <div class="col-12 text-center" id="message">
        </div>
    </div>

    <div id="listing" style="display:none;">
        <div class="row justify-content-center mt-3 mb-3" id="search-tools">
            <div class="col-5 col-sm-5 col-md-3 col-lg-1">
                <div class="form-group">
                    <label for="page-length">Show</label>
                    <select class="form-control select2" id="page-length" data-search="false">
                        <option value="8">8</option>
                        <option value="16">16</option>
                        <option value="32">32</option>
                        <option value="64">64</option>
                    </select>
                </div>
            </div>

            <div class="col-7 col-sm-7 col-md-4 col-lg-2">
                <div class="form-group">
                    <label for="sort-by">Sort by</label>
                    <div class="input-group">
                        <select class="form-control select2" id="sort-by" data-search="false">
                            <option value="0">Name</option>
                            <option value="1">Stars</option>
                            <option value="2">Forks</option>
                            <option value="3">Updated</option>
                        </select>
                        <div class="input-group-append">
                            <a href="#" class="btn btn-secondary" title="Ascending" id="sort-asc">
                                <i class="fa fa-sort-asc align-bottom"></i>
                            </a>
                            <a href="#" class="btn btn-secondary" title="Descending" id="sort-desc"
                               style="display: none;">
                                <i class="fa fa-sort-desc"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% include partials/pagination.html.liquid isBottom=false isTheme=true %}

        <div class="row" id="listings">
        </div>

        {% include partials/pagination.html.liquid isBottom=true isTheme=true %}
    </div>
</div>